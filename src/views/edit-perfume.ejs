<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Perfume</title>
</head>

<body>
    <h1>Edit Perfume</h1>
    <form action="/api/v1/perfume/update/<%= perfume._id %>" method="POST">
        <label>Perfume Name:</label>
        <input type="text" name="perfumeName" value="<%= perfume.perfumeName %>" required>

        <label>Image URL:</label>
        <input type="text" name="uri" value="<%= perfume.uri %>">

        <label>Price ($):</label>
        <input type="number" name="price" value="<%= perfume.price %>" required>

        <label>Concentration:</label>
        <input type="text" name="concentration" value="<%= perfume.concentration %>" required>

        <label>Description:</label>
        <textarea name="description" required><%= perfume.description %></textarea>

        <label>Ingredients:</label>
        <textarea name="ingredients" required><%= perfume.ingredients %></textarea>

        <label>Volume (ml):</label>
        <input type="number" name="volume" value="<%= perfume.volume %>" required>

        <label>Target Audience:</label>
        <select name="targetAudience">
            <option value="male" <%=perfume.targetAudience==='male' ? 'selected' : '' %>>Male</option>
            <option value="female" <%=perfume.targetAudience==='female' ? 'selected' : '' %>>Female</option>
            <option value="unisex" <%=perfume.targetAudience==='unisex' ? 'selected' : '' %>>Unisex</option>
        </select>

        <label>Brand ID:</label>
        <input type="text" name="brand" value="<%= perfume.brand._id %>" required>

        <button type="submit">Save Changes</button>
    </form>

    <h2>Comments</h2>
    <ul>
        <% perfume.comments.forEach(comment=> { %>
            <li>
                <strong>Rating:</strong>
                <%= comment.rating %> - <%= comment.content %>
            </li>
            <% }); %>
    </ul>
</body>

</html>